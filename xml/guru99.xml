<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<site name="Guru 99 Bank" url="http://demo.guru99.com">
    <scenario name="Register">
        <form name="Guru 99 bank Register" url="">
            <text value="Enter your email address to get"/>
            <not-text value="Error 404"/>
            <fill id="emailid" value="email@example.com"/>
            <submit element="emailid"/>
            <text value="Access details to demo site."/>
            <text value="This access is valid only for 20 days."/>
            <store key="username" id="/html/body/table/tbody/tr[4]/td[2]"/>
            <store key="password" id="/html/body/table/tbody/tr[5]/td[2]"/>
            <not-text value="Error 404"/>
        </form>
    </scenario>
    <scenario name="Login">
        <form name="Login Form" url="/V4/index.php">
            <text value="Steps To Generate Access"/>
            <fill id="uid" value="username" stored="yes"/>
            <fill id="password" value="password" stored="yes"/>
            <submit element="uid"/>
            <text value="Welcome To Manager's Page of Guru99 Bank"/>
        </form>
    </scenario>
    <scenario name="Create New Customer">
        <form name="Create Customer Form" url="/html/body/div[2]/div/ul/li[2]/a" relative="no">
            <text value="Add New Customer"/>
            <fill id="name" value="Mohammad Noor"/>
            <click-checkbox id="rad1" index="0"/>
            <fill id="dob" value="05221994"/>
            <fill id="addr" value="Amman Jordan"/>
            <fill id="city" value="Amman"/>
            <fill id="state" value="Unknown"/>
            <fill id="pinno" value="123456"/>
            <fill id="telephoneno" value="0786201850"/>
            <fill id="emailid" value="DrDAj3gcVEg@example.com"/>
            <fill id="password" value="password" stored="yes"/>
            <submit element="sub" type="button"/>
            <text value="Customer Registered Successfully!!!"/>
            <store key="id" id="//*[@id=&quot;customer&quot;]/tbody/tr[4]/td[2]"/>
        </form>
    </scenario>
    <scenario name="Create New Account">
        <form name="Create Account Form" url="/html/body/div[2]/div/ul/li[5]/a" relative="no">
            <text value="Add new account form"/>
            <fill id="cusid" value="id" stored="yes"/>
            <select id="selaccount" text="Current"/>
            <fill id="inideposit" value="1000"/>
            <submit element="button2" type="button"/>
            <text value="Account Generated Successfully!!!"/>
        </form>
    </scenario>
    <scenario name="Logout">
        <form name="Logout Form" url="/html/body/div[2]/div/ul/li[15]/a" relative="no">
            <verify-alert expected="You Have Succesfully Logged Out!!"/>
            <response-alert response="true"/>
            <text value="Steps To Generate Access"/>
        </form>
    </scenario>
</site>
